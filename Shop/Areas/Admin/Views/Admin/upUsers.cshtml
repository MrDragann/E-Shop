                    activate to sort column ascending" style="width: 174px;">
                    User name
                </th>
                <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="
                    Email
                    " style="width: 297px;">
                    Email
                </th>
                <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="
                    Points
                    " style="width: 108px;">
                    Registration date
                </th>
                <th class="sorting" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label="
                    Joined
                    activate to sort column ascending" style="width: 156px;">
                    Role
                </th>
                <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="
                    Status
                    " style="width: 170px;">
                    Status
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr class="gradeX odd" role="row">
                    <td>
                        <input type="checkbox" class="checkboxes" value="@user.Id" name="list">
                    </td>
                    <td class="sorting_1">
                        @user.UserName
                    </td>
                    <td>
                        <a href="mailto:userwow@gmail.com">
                            @user.Email
                        </a>
                    </td>
                    <td>
                        @user.RegistrationDate
                    </td>
                    <td class="center"></td>
                    <td>
                        @if (user.Status == "Подтвержден")
                        {
                            <span class="label label-sm label-success">
                                @user.Status
                            </span>
                        }
                        else if (user.Status == "Не подтвержден")
                        {
                            <span class="label label-sm label-warning">
                                @user.Status
                            </span>
                        }
                        else
                        {
                            <span class="label label-sm label-default">
                                @user.Status
                            </span>
                        }

                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-md-10 col-sm-10">
        <button id="deleteUsers" class="btn btn-danger">Удалить</button>
        <button id="blockUsers" class="btn btn-danger">Заблокировать</button>
