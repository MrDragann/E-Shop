                var list = $('#delete').attr("name");
                var listVal = $('#delete').attr("value");
                values = $("input[name=list]").map(function () {
                    if ($(this)[0].checked) {
                        return $(this).val();
                    }

                }).get();
                var role = $("#Moderator").val();

                formaData.append("list", values);
                formaData.append("role", role);

                $.ajax({
                    type: "POST",
                    url: 'EditRole',
                    contentType: false,
                    processData: false,
                    data: formaData,
                    success: function (result) {
                        console.log(result);
                        updateUsers();
                    },
                    error: function (xhr) {
                        console.log(xhr.responseText);
                    }
                });
            });

            $('#User').click(function () {

                var formaData = new FormData();
                var list = $('#delete').attr("name");
                var listVal = $('#delete').attr("value");
                values = $("input[name=list]").map(function () {
                    if ($(this)[0].checked) {
                        return $(this).val();
                    }

                }).get();
                var role = $("#User").val();

                formaData.append("list", values);
                formaData.append("role", role);

                $.ajax({
                    type: "POST",
                    url: 'EditRole',
                    contentType: false,
                    processData: false,
                    data: formaData,
                    success: function (result) {
                        console.log(result);
                        updateUsers();
                    },
                    error: function (xhr) {
                        console.log(xhr.responseText);
                    }
                });
            });

            $('#reloadUsers').click(function () {
                updateUsers();
            });
            function updateUsers() {

                $('#sample_1_wrapper').load("http://localhost:58081/Admin/Admin/upUsers");
            };
        });
    </script>
