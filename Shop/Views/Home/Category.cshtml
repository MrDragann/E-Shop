@using Shop.Models;
@model IEnumerable<Product>

@{
    ViewBag.Title = @ViewBag.Message;
    Layout = "~/Views/Shared/Layout.cshtml";
}




<section>
    <div class="container">
        <div class="row" id="sortProducts">
            <!-- Сортировка -->
            <span class="sortButton">Сортировка: </span>
            <div class="btn-group sortButton">

                <a class="btn btn-default" href="@Url.Action("index","Home")">По умолчанию</a>
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Меню с переключением</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="@Url.Action("Category","Home",new { Category = Request.QueryString["Category"], sort = TypeSort.NameAsc })">По названию, от А до Я</a></li>
                    <li><a href="@Url.Action("Category","Home",new { Category = Request.QueryString["Category"], sort = TypeSort.NameDesc })">По названию, от Я до А</a></li>
                    <li><a href="@Url.Action("Category","Home",new { Category = Request.QueryString["Category"], sort = TypeSort.PriceAsc })">По цене, сначала недорогие</a></li>
                    <li><a href="@Url.Action("Category","Home",new { Category = Request.QueryString["Category"], sort = TypeSort.PriceDesc })">По цене, сначала дорогие</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            

            @if (Model.Count() < 1)
            {
                <h4>По вашему запросу ничего не найдено.</h4>
            }
            else
            {

                <div class="col-sm-9 padding-right">
                    <div class="features_items">
                        <!--features_items-->
                        <h2 class="title text-center">@ViewBag.Message</h2>
                        @foreach (var item in Model)
                        {
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <img src="/Content/Images/home/@item.Image" alt="">
                                            <h2>@item.Price р.</h2>
                                            <p>@item.Name</p>
                                            <a href="" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>В корзину</a>
                                        </div>
                                        <a href="@Url.Action("Details","Home",new { id = item.Id })">
                                            <div class="product-overlay">
                                                <div class="overlay-content">
                                                    <h2>@item.Price р.</h2>
                                                    <p>@item.Name</p>
                                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>В корзину</a>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="choose">
                                        <ul class="nav nav-pills nav-justified">
                                            <li><a href="#"><i class="fa fa-plus-square"></i>В список желаемого</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                        <ul class="pagination">
                            <li class="active"><a href="">1</a></li>
                            <li><a href="">2</a></li>
                            <li><a href="">3</a></li>
                            <li><a href="">»</a></li>
                        </ul>
                    </div><!--features_items-->
                </div>
                @Html.Partial("leftSidebar")
            }
            <!--features_items-->
        </div>
    </div>
</section>