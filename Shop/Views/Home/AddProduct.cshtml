@using Shop.Models;
@model Product

@{
    ViewBag.Title = "Добавление товара";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление товара</h2>
<hr />

<form method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Название</label>
        <input type="text" class="form-control" name="Name" id="Name" placeholder="Производитель и модель" required />
    </div>
    <div class="form-group">
        <label for="Description" class="col-sm-2 control-label">Описание</label>
        <textarea class="form-control" rows="5" name="Description" id="Description" required></textarea>
    </div>
    <div class="form-group">
        <label for="Characteristics" class="col-sm-2 control-label">Характеристики</label>
        <textarea class="form-control" rows="5" name="Characteristics" id="Characteristics" required></textarea>
    </div>
    <div class="form-group">
        <label for="Tags" class="col-sm-2 control-label">Теги</label>
        <textarea class="form-control" rows="2" name="Tags" id="Tags" placeholder="Ключевые слова" required></textarea>
    </div>
    <div class="form-group">
        <label for="selectedCategory" class="col-sm-2 control-label">Категория</label>
        <select class="form-control" name="selectedCategory" id="selectedCategory">
            @foreach (var item in ProductData.Category)
            {
                <optgroup label="@item.Name">
                    @foreach (var i in item.Childrens)
                    {
                        <option>@i.Name</option>
                    }
                </optgroup>
            }
        </select>
    </div>
    @*<div class="form-group">
        <label for="Manufacturer" class="col-sm-2 control-label">Производитель</label>
        <select class="form-control" name="ManufacturerId" id="Manufacturer">
            @{ProductContext db = new ProductContext(); }
            @foreach (var item in  db.Manufacturers)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>*@
        <div class="form-group">
            <label for="Price" class="col-sm-2 control-label">Цена</label>
            <input type="number" class="form-control" name="Price" id="Price" placeholder="В рублях" required />
        </div>
    <div class="form-group">
        <label for="DateAdd" class="col-sm-2 control-label">Дата добавления</label>
        <input type="Date" class="form-control" name="DateAdd" id="DateAdd" />
    </div>
    <div class="form-group">
        <label for="Image" class="col-sm-2 control-label">Загрузить фото</label>
        <input type="file" class="form-control" name="Image" id="Image" accept="image/jpeg,image/png" />
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
    
</form>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
