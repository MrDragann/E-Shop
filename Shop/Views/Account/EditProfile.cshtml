@model IServices.Models.ModelUserInfo
@{
    ViewBag.Title = "Редактирование профиля";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section id="do_action">
    <div class="container">
        <div class="heading">
            <h3>Редактировать информацию адреса доставки</h3>
            
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="chose_area" id="EditProfileInfo">
                    @using (Html.BeginForm("EditProfile", "Account"))
                    {
                        <div class="form-group">
                            <label for="FirstName" class="col-sm-4 control-label">Ваше имя</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="FirstName" value="@Model.UserProfile.FirstName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="LastName" class="col-sm-4 control-label">Ваша фамилия</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="LastName" name="LastName" placeholder="LastName" value="@Model.UserProfile.LastName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Phone" class="col-sm-4 control-label">Телефон</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="Phone" name="Phone" placeholder="Phone" value="@Model.UserProfile.Phone">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Country" class="col-sm-4 control-label">Страна</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="Country" name="Country" placeholder="Country" value="@Model.UserProfile.Country">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="City" class="col-sm-4 control-label">Город</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="City" name="City" placeholder="City" value="@Model.UserProfile.City">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="StreetAddress" class="col-sm-4 control-label">Улица, № дома, № квартиры</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="StreetAddress" name="StreetAddress" placeholder="StreetAddress" value="@Model.UserProfile.StreetAddress">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-default update" href="">Сохранить</button>
                    }
                    
                </div>
            </div>
            <div class="col-sm-6">
                <div class="total_area">
                    <ul>
                        <li>Общая стоимость <span>$59</span></li>
                        <li>Налог <span>$2</span></li>
                        <li>Стоимость доставки <span>Бесплатно</span></li>
                        <li>Итого к оплате<span>$61</span></li>
                    </ul>
                    <a class="btn btn-default update" href="">Обновить</a>
                    <a class="btn btn-default check_out" href="">Перейти к оплате</a>
                </div>
            </div>
        </div>
    </div>
</section>



